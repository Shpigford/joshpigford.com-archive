<p class="breadcrumb"><%= link_to "Toys", toys_path %> &rarr; </p>
<h1><%= @toy.name %></h1>
<div class="toy_details">
  <div class="images">
    <% @toy.images.each do |image| %>
      <p><%= image_tag url_for(image.variant(resize_to_limit: [800, 800], background: 'white', gravity: 'center', extent: '800x800')) %></p>
    <% end %>
  </div>
  <table>
    <tr> 
      <th>Artist</th>
      <td><%= @toy.artist %></td>
    </tr>
    <tr> 
      <th>Manufacturer</th>
      <td><%= @toy.manufacturer %></td>
    </tr>
    <tr> 
      <th>Platform</th>
      <td><%= @toy.platform %></td>
    </tr>
    <% if @toy.series.present? %>
    <tr> 
      <th>Series</th>
      <td><%= @toy.series %></td>
    </tr>
    <% end %>
    <tr> 
      <th>Size</th>
      <td><%= @toy.size %>"</td>
    </tr>
    <tr> 
      <th>Color</th>
      <td><%= @toy.color %></td>
    </tr>
    <tr> 
      <th>Released</th>
      <td><%= @toy.release_date.strftime('%Y') %></td>
    </tr>
  </table>
</div>