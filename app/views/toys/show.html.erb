<%- 
  title "#{@toy.name} - #{@toy.platform} - Designer Toys"
  description "#{@toy.name} by #{@toy.artist}, from Josh Pigford's designer toy collection."
  meta_image rails_representation_url(@toy.images.first.variant(resize_to_fill: [1200, 800]))
-%>

<p class="breadcrumb"><%= link_to "Toys", toys_path %> &rarr; </p>
<div class="prose max-w-none">
<h1><%= @toy.name %></h1>
<div class="flex items-start">
  <div class="flex-1">
    <% @toy.images.each do |image| %>
      <p><%= image_tag url_for(image.variant(resize_to_limit: [800, 800])) %></p>
    <% end %>
  </div>
  <table class="flex-1">
    <tr> 
      <th>Artist</th>
      <td><%= @toy.artist %></td>
    </tr>
    <tr> 
      <th>Manufacturer</th>
      <td><%= @toy.manufacturer %></td>
    </tr>
    <tr> 
      <th>Platform</th>
      <td><%= @toy.platform %></td>
    </tr>
    <% if @toy.series.present? %>
    <tr> 
      <th>Series</th>
      <td><%= @toy.series %></td>
    </tr>
    <% end %>
    <tr> 
      <th>Size</th>
      <td><%= @toy.size %>"</td>
    </tr>
    <tr> 
      <th>Color</th>
      <td><%= @toy.color %></td>
    </tr>
    <tr> 
      <th>Released</th>
      <td><%= @toy.release_date.strftime('%Y') %></td>
    </tr>
    <% if @toy.original_price.present? %>
    <tr> 
      <th>Original Price</th>
      <td><%= @toy.original_price %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>